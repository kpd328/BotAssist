<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BotAssist.View.HardCode.Rythm.Play"
             Padding="20"
             Title="Rythm">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Rythm"
                   FontSize="Caption"
                   FontAttributes="Bold"
                   TextTransform="Uppercase"/>
            <Label Text="Play a Song or Playlist"
                   FontSize="Large"
                   FontAttributes="Bold"/>
            <Label Text="!play"
                   FontSize="Body"/>
            <Entry Text="{Binding Input}"
                   Placeholder="YouTube video URL, YouTube playlist URL or Song search"/>
            <Entry IsReadOnly="True"
                   Text="{Binding Output}"/>
            <Button Text="Copy"
                    Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>